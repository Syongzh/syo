#category
  width $stage-page-width
  background #fff
  padding 7px 27px
  //padding-left 27px
  border-radius 1px
  margin-bottom 37px
  float left
  position relative
  overflow hidden
  h1 {
    font-size 18px
    width 194px
    padding 2px 0;
    transform rotate(45deg)
    position absolute
    background #41b883
    color #fff
    right -43px
    top 40px
    text-align center
  }
.category-item
  height 77px
  line-height 77px
  overflow hidden
  &:last-child {
    margin-bottom 37px
  }
  h3
    border-bottom 1px dashed #eaecef
    a:hover {
      color: #41b883
    }
    time
      padding 0 17px 0 7px