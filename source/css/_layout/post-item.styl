#recent-posts
  width $stage-page-width
  background #fff
  border-radius 1px
  margin-bottom 37px
  float left
.post-item
  border-bottom 1px dashed #e1e1e1
  padding 27px
  img
    display block
    max-width 100%
    margin 7px auto
  &:last-child {
    margin-bottom 37px
  }
  .create
    padding-bottom 14px
    padding-left 4px
    time
      padding-right 17px
  .readmore
    margin-left 1px
    margin-top 17px
    font-weight 600
    a:hover
      color $stage-theme-color
  h1:first-child
    font-size 24px
    padding-bottom 7px
    font-weight 600
    a
      transition color 0.37s ease
      color #414548
      &:hover {
        color: $stage-theme-color
      }
  time
    display inline-block
  p
    line-height 2
    padding 7px 0
  table
    width 100%
    border-collapse collapse
    margin 17px 0
    font-size 14px
    word-break break-all
    table-layout fixed
  tbody tr
    transition background-color 0.4s
    &:hover
      background-color  #eaecef
  tr th
    border 1px solid #ccc
    font-size 15px
    padding 14px 7px
    font-weight 600
    line-height 2
  tr td
    border 1px solid #ccc
    padding 14px 7px
    line-height 2
  ul
    list-style circle
    padding-left 42px
    li
      line-height 1.7
  ol
    list-style decimal
    padding-left 42px
  li
    line-height 1.7
  .article-category-list li
    list-style none
    padding 0
  .article-category-list
    display inline-block
    padding-left 17px
    position relative
    margin-right 17px
    a:hover
      color $stage-theme-color
    &::before
      display inline-block
      content: ''
      width 11px
      height 11px
      background $stage-theme-color
      border-radius 50%
      position absolute
      left 0px
      top 7px
