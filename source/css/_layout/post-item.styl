#recent-posts
  width $stage-page-width
  background #fff
  border-radius 1px
  margin-bottom 37px
  float left
.post-item
  border-bottom 1px dashed #ccc
  padding 17px 0
  margin 0 17px
  img
    display block
    max-width 100%
    margin 7px auto
  &:last-child {
    margin-bottom 37px
  }
  .create
    padding-bottom 7px
    time
      padding-right 17px
  .readmore
    margin-left 7px
    font-weight 600
    &:hover
      color #41b883
  h3
    font-size 27px
    padding-bottom 14px
    font-weight 600
    a:hover {
      color: #41b883
    }
  time
    display inline-block
  p
    line-height 2
  ul
    list-style circle
    padding-left 42px
    li
      line-height 1.7
  .tags-category-list
    padding-left 18px
    font-size 12px
    margin 14px 0
    li
      list-style none
      padding 0
  .tags-category-list-item
    display inline-block
    padding 2px 3px
    background #f1f8ff
    margin-right 24px
    position relative
    a
      color #000
      &:hover
        color #41b883
  .tags-category-list li:nth-child(even)
    &::before
      content: ''
      display inline-block
      border-right 20px solid #f1f8ff
      border-bottom 20px solid rgba(0, 0, 0, 0)
      position absolute
      left -20px
      top: 0px
    &::after
      content: ''
      display inline-block
      border-right 20px solid rgba(0, 0, 0, 0)
      border-top 20px solid #f1f8ff
      position absolute
      right  -20px
      top: 0px
  .tags-category-list li:nth-child(odd)
    &::before
      content: ''
      display inline-block
      border-right 20px solid #f1f8ff
      border-top 20px solid rgba(0, 0, 0, 0)
      position absolute
      left -20px
      top: 0px
    &::after
      content: ''
      display inline-block
      border-right 20px solid rgba(0, 0, 0, 0)
      border-bottom 20px solid #f1f8ff
      position absolute
      right  -20px
      top: 0px
  .article-category-list li
    list-style none
    padding 0
  .article-category-list
    display inline-block
    padding-left 17px
    position relative
    margin-right 17px
    a:hover
      color #41b883
    &::before
      display inline-block
      content: ''
      width 11px
      height 11px
      background #41b883
      border-radius 50%
      position absolute
      left 0px
      top 7px
