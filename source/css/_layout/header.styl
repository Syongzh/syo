header
  width 100%
  height 450px
  margin-bottom 34px
  .header-main {
    background #41b883
    height 435px
  }
  h1
    color #fff
    text-align center
    padding-top 17px
    a
      color #fff
  h4 {
    text-align center
    color #fff
    padding-top 7px
    font 400 16px/14px 'sans-serif'
  }
#nav
  width $stage-base-width
  height 350px
  background #41b883
  margin 0 auto
  margin-top -325px
  box-shadow 0 0 10px #000
  .nav-img {
    height 300px
    width 100%
    overflow hidden
    cursor pointer
  }