#post
  width $stage-page-width
  background rgba(255, 255, 255, 0.7)
  padding 27px
  .bottom-line
    width 100%
    border 1px dashed #ccc
    margin 17px 0
  h1
    padding 10px
    font-size 22px
    font-weight 700
  h1:first-child
    font-weight 400
    margin-bottom 17px
    text-align center
  p
    padding-bottom 27px
    font-size 14px
    line-height 2
  img
    max-width 100%
    margin 7px auto
    display block
#article-nav
  height 70px
  font-size 14px
  a {
    color: #777
    &:hover {
      color #222
    }
  }
  position relative
#article-nav-newer
  float right
  width 50%
  box-sizing border-box
  padding-right: 14px
  text-align right
  .article-nav-caption
    position absolute
    right 0
    top 0
#article-nav-older
  float: left
  width 50%
  box-sizing border-box
  padding-left: 14px
  .article-nav-caption
    position absolute
    left 0
    top 0