#post
  width $stage-page-width
  background #fff
  float left
  padding 0 27px
  position relative
  .bottom-line
    width 100%
    border 1px dashed #ccc
    margin 17px 0
  h1, h2
    border-bottom 1px solid #eaecef
    font-weight 600
    padding 7px 0
    margin-bottom 17px
  h1
    font-size 27px
  h2
    font-size 24px
  h1:first-child
    border: 0 none
    margin-bottom 17px
    line-height 1.7
  h3, h4, h5, h6
    font-size 20px
  p
    line-height 2
  img
    max-width 100%
    margin 7px auto
    display block
  ul
    list-style circle
    padding-left 42px
    li
      line-height 1.7

#article-nav
  height 70px
  font-size 14px
  a {
    color: #777
    &:hover {
      color #222
    }
  }
  position relative
#article-nav-newer
  float right
  width 50%
  box-sizing border-box
  padding-right: 14px
  text-align right
  .article-nav-caption
    position absolute
    right 0
    top 0
#article-nav-older
  float: left
  width 50%
  box-sizing border-box
  padding-left: 14px
  .article-nav-caption
    position absolute
    left 0
    top 0
#toc
  width $stage-aside-width
  float right
  background #fff
  position sticky
  padding 10px 10px 17px 10px
  top 7px
  h2
    font-size 17px
    font-weight 600
  ol
    padding 4px
    font-size 14px
    li
      padding 3px 0
      ol
        padding-left 10px
  .active
    color: #41b883