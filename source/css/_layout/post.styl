#post
  width $stage-page-width
  background #fff
  float left
  padding 0 27px
  position relative
  .create
    padding 0 0 17px 4px
    time
      padding-right 17px
  .article-category-list li
    list-style none
    padding 0
  .article-category-list
    display inline-block
    padding-left 17px
    position relative
    margin-right 17px
    a:hover
      color #41b883
    &::before
      display inline-block
      content: ''
      width 11px
      height 11px
      background #41b883
      border-radius 50%
      position absolute
      left 0px
      top 7px  
  .bottom-line
    width 100%
    border 1px dashed #ccc
    margin 17px 0
  h1, h2
    border-bottom 1px solid #eaecef
    font-weight 600
    padding 7px 0
    margin-bottom 17px
  h1
    font-size 27px
  h2
    font-size 24px
  h1:first-child
    border: 0 none
    margin-bottom 0px
    padding-bottom 1px
    line-height 1.7
  h3, h4, h5, h6
    font-size 20px
  p
    line-height 2
  img
    max-width 100%
    margin 7px auto
    display block
  ul
    list-style circle
    padding-left 42px
    li
      line-height 1.7
  .tags-category-list
    padding-left 27px
    font-size 12px
    margin 27px 0
    li
      list-style none
      padding 0
  .tags-category-list-item
    display inline-block
    padding 2px 3px
    background #f1f8ff
    margin-right 24px
    position relative
    a
      color #000
      &:hover
        color #41b883
  .tags-category-list li:nth-child(even)
    &::before
      content: ''
      display inline-block
      border-right 20px solid #f1f8ff
      border-bottom 20px solid rgba(0, 0, 0, 0)
      position absolute
      left -20px
      top: 0px
    &::after
      content: ''
      display inline-block
      border-right 20px solid rgba(0, 0, 0, 0)
      border-top 20px solid #f1f8ff
      position absolute
      right  -20px
      top: 0px
  .tags-category-list li:nth-child(odd)
    &::before
      content: ''
      display inline-block
      border-right 20px solid #f1f8ff
      border-top 20px solid rgba(0, 0, 0, 0)
      position absolute
      left -20px
      top: 0px
    &::after
      content: ''
      display inline-block
      border-right 20px solid rgba(0, 0, 0, 0)
      border-bottom 20px solid #f1f8ff
      position absolute
      right  -20px
      top: 0px
#article-nav
  height 70px
  font-size 14px
  a {
    color: #777
    &:hover {
      color #222
    }
  }
  position relative
#article-nav-newer
  float right
  width 50%
  box-sizing border-box
  padding-right: 14px
  text-align right
  .article-nav-caption
    position absolute
    right 0
    top 0
#article-nav-older
  float: left
  width 50%
  box-sizing border-box
  padding-left: 14px
  .article-nav-caption
    position absolute
    left 0
    top 0
#toc
  width $stage-aside-width
  float right
  background #fff
  position sticky
  padding 10px
  top 17px
  border-left 1px solid #eaecef
  h2
    font-size 17px
    font-weight 600
  ol
    padding 4px
    font-size 14px
    li
      padding 3px 0
      ol
        padding-left 10px
  .active
    color: #41b883