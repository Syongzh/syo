#post
  width 70%
  margin 0 auto
  background rgba(255, 255, 255, 0.7)
  padding 27px
  .bottom-line
    width 100%
    border 1px dashed #ccc
    margin 17px 0
  h1
    padding 10px
    font-size 22px
    font-weight 700
  h1:first-child
    font-weight 400
    margin-bottom 17px
    text-align center
  p
    padding-bottom 27px
    font-size 14px
    line-height 2
  img
    margin 7px auto
    display block
#article-nav
  height 70px
  a {
    color: #777
    &:hover {
      color #222
    }
  }
#article-nav-newer
  float right
#article-nav-older
  float: left